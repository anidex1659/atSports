<Style>
.create_t{
display: block;
margin-top: 20px;
}
.addMatch{
  margin-top: 50px;
}
.sms{
  margin-top: 50px;
}
.back-button {
		display: block;
		background-color: #333;
		color: #fff;
		text-align: center;
		padding: 10px;
		border-radius: 5px;
		text-decoration: none;
		max-width: 200px;
		margin: 0 auto;
    margin-top: 20px;
	}

	.back-button:hover {
		background-color: #ef9712;
		cursor: pointer;
    animation-name: bounce;
    animation-timing-function: ease;
	}
  .navbar-nav
  {
    color: #131212;
  }

